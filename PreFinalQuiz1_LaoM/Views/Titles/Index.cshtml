@model IEnumerable<PreFinalQuiz1_LaoM.Models.TitlesModels>

@{
    ViewBag.Title = "Index";
}

<h2>Books List</h2>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Publisher)
        </th>


        <th>
            Author
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TitleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.Author) @Html.DisplayFor(modelItem => item.AuthorFN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>

        </tr>
    }

</table>
